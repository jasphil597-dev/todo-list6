<!DOCTYPE html>
<html>
	<head>
		<title>To-Do List</title>
		<link rel="stylesheet" href="style.css" />
	</head>
	<body>
		<h1 class="h1_todo_list">Your To-Do List</h1>
		<form action="/todo" method="POST">
			<input type="text" name="todo" placeholder="New Task" required />
			<button class="btn_todo_list" type="submit">Add</button>
		</form>
		<ul>
			<% todos.forEach(todo => { %>
			<li>
				<%= todo.todo %>
				<form
					action="/delete/<%= todo._id %>"
					method="POST"
					style="display: inline"
				>
					<button class="btn_delete" type="submit">Delete</button>
				</form>
				<a class="btn_edit" href="/todo/<%= todo._id %>">Edit</a>
			</li>
			<% }) %>
		</ul>
		<div class="links">
			<a href="/logout">Log Out</a>
		</div>
	</body>
</html>
