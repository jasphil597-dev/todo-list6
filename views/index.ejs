<!DOCTYPE html>
<html>
	<head>
		<title>To-Do List</title>
		<link rel="stylesheet" href="style.css" />
	</head>
	<body>
		<h1 class="h1_todo_list">Your To-Do List</h1>
		<form action="/todo" method="POST">
			<input
				class="task_inpt"
				type="text"
				name="todo"
				placeholder="New Task"
				required
			/>
			<div class="add_button_container">
				<button class="btn_todo_list" type="submit">Add</button>
			</div>
		</form>

		<ul>
			<% todos.forEach(todo => { %>
			<li class="todo_item">
				<span class="todo_text"><%= todo.todo %></span>
				<div class="button_group">
					<form
						action="/delete/<%= todo._id %>"
						method="POST"
						style="display: inline"
					>
						<button class="btn_delete" type="submit">Delete</button>
					</form>
					<a class="btn_edit" href="/todo/<%= todo._id %>">Edit</a>
				</div>
			</li>
			<% }) %>
		</ul>
		<div class="logout-link">
			<a href="/logout">Log Out</a>
		</div>
	</body>
</html>
